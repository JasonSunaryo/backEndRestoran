<%- include('layout/Header') %>


<div class="container">
    <div class="row">
        <div class="col">
            <h1>Edit Menu (<%= menu.name %>)</h1>
            <form action="/update/<%= menu._id %>" method="POST" class="form-container" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name">Name:</label>
                    <input type="text" id="name" name="name" class="form-input" value="<%= menu.name %>" required>
                </div>
                <div class="form-group">
                    <label for="price">Price:</label>
                    <input type="number" id="price" name="price" class="form-input" value="<%= menu.price %>" required>
                </div>
                <div class="form-group">
                    <label for="image">Select Image</label>
                    <input type="file" id="image" name="image" accept="image/*" required>
                    <img src="/<%= menu.image %>" width="100" class="img-thumnail mt-1">
                </div>
                <input type="hidden" name="old_image" value="<%= menu.image %>">
                <button type="submit" class="form-submit" value="Update Menu" class="btn-text btn">Edit Menu</button>
            </form>
        </div>
    </div>
</div>

<style>
    /* Style untuk container */
    .container {
        margin: 50px auto;
        width: 70%;
        background-color: #f0f0f0; /* Warna latar belakang */
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    
    /* Style untuk judul */
    h1 {
        font-size: 2.5rem;
        margin-bottom: 30px;
    }
    
    /* Style untuk form */
    .form-container {
        background-color: #f9f9f9;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    
    /* Style untuk label */
    label {
        font-weight: bold;
    }
    
    /* Style untuk input */
    .form-input {
        width: 100%;
        padding: 10px;
        margin: 8px 0;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }
    
    /* Style untuk file input */
    input[type="file"] {
        display: none;
    }
    
    /* Style untuk tombol pilih gambar */
    .file-upload {
        background-color: #4CAF50;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }
    
    .file-upload:hover {
        background-color: #45a049;
    }
    
    /* Style untuk gambar pratinjau */
    .img-thumbnail {
        margin-top: 10px;
        border-radius: 5px;
    }
    
    /* Style untuk tombol submit */
    .form-submit {
        background-color: #008CBA;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        margin-top: 20px;
    }
    
    .form-submit:hover {
        background-color: #005f78;
    }
    </style>