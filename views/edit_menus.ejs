<%- include('layout/Header') %>

<div class="container">
    <div class="row">
        <div class="col">
            <h1>Edit Menu (<%= menu.name %>)</h1>
            <form action="/update/<%= menu._id %>" method="POST" class="form-container" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name">Name:</label>
                    <input type="text" id="name" name="name" class="form-input" value="<%= menu.name %>" required>
                </div>
                <div class="form-group">
                    <label for="price">Price:</label>
                    <input type="number" id="price" name="price" class="form-input" value="<%= menu.price %>" required>
                </div>
                <div class="form-group">
                    <label for="image">Select Image</label>
                    <input type="file" id="image" name="image" accept="image/*" required>
                    <img src="/<%= menu.image %>" width="100" class="img-thumnail mt-1">
                </div>
                <input type="hidden" name="old_image" value="<%= menu.image %>">
                <button type="submit" class="form-submit" value="Update Menu" class="btn-text btn">Edit Menu</button>
            </form>
        </div>
    </div>
</div>
